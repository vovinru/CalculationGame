<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculationGame2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3">
            <Label Text="Counting in the mind!" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>

        <Button x:Name="ButtonStart" Text="Start" Clicked="ButtonStart_Clicked" FontSize="16"
                Margin="30"></Button>

        <Label Text="Record:" FontSize="16" HorizontalTextAlignment="Center"
               Margin="30"></Label>
        <Label Text="{Binding Record}" FontSize="16" HorizontalTextAlignment="Center"
               Margin="30"></Label>
        
    </StackLayout>

</ContentPage>
